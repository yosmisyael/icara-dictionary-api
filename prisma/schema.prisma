generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SignLanguage {
  BISINDO
  SIBI
}

enum EntryType {
  LETTER
  NUMBER
  WORD
}

model Entry {
  id       Int          @id @default(autoincrement())
  name     String       @unique
  url      String
  signLang SignLanguage @map("sign_lang")
  source   String?
  type     EntryType
  aliases  Alias[]

  @@map("entries")
}

model Alias {
  id      Int    @id @default(autoincrement())
  name    String
  entryId Int    @map("entry_id")
  entry   Entry  @relation(fields: [entryId], references: [id])

  @@map("aliases")
}
